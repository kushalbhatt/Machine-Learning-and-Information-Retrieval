create TABLE (userid INT, movieid INT, tagid INT, timestamp DATETIME);

select m.movieName,m.genre,t.tagid,tg.tag
from mlmovies m
JOIN mltags t ON m.movieid = t.movieid
JOIN genome_tags tg ON tg.tagid = t.tagid;


